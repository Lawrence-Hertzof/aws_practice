{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "AllowWriteToCloudWatchLogs",
            "Effect": "Allow",
            "Action": [
                "logs:GetLogEvents",
                "logs:PutLogEvents",

                "logs:CreateLogStream",
                "logs:DescribeLogStreams",
                "logs:PutRetentionPolicy",
                "logs:CreateLogGroup"

            ],
            "Resource": ["arn:aws:logs:*"]
        }
    ]
}
